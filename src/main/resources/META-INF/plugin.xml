<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>name.remal.idea-plugin.improved-config</id>
    <name>Improved Config</name>
    <vendor>remal</vendor>

    <depends>com.intellij.modules.platform</depends>

    <depends optional="true" config-file="plugin-with-editorconfig.xml">org.editorconfig.editorconfigjetbrains</depends>
    <depends optional="true" config-file="plugin-with-gradle.xml">com.intellij.gradle</depends>
    <depends optional="true" config-file="plugin-with-checkstyle.xml">CheckStyle-IDEA</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectConfigurable
            parentId="root"
            instance="name.remal.idea_plugin.improved_config.config.ProjectConfigurable"
            displayName="Project Auto Config"
        />

        <postStartupActivity
            implementation="name.remal.idea_plugin.improved_config.config.ProjectConfigLoadActivity"
            order="last"
        />
    </extensions>

    <projectListeners>
        <listener
            topic="name.remal.idea_plugin.improved_config.config.ProjectConfigListener"
            class="name.remal.idea_plugin.improved_config.ActionsOnSaveHandler"
        />
    </projectListeners>
</idea-plugin>
